{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2020"
    ],
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "noEmit": true,
    "paths": {
      "k11-inbox": [
        "packages/k11-inbox/src/index.ts"
      ],
      "k11-inbox/*": [
        "packages/k11-inbox/src/*"
      ],
      "k11-monitoring": [
        "packages/k11-monitoring/src/index.ts"
      ],
      "k11-monitoring/*": [
        "packages/k11-monitoring/src/*"
      ],
      "@design-system": [
        "packages/design-system/src/index.ts"
      ],
      "@design-system/*": [
        "packages/design-system/src/*"
      ],
      "@utils/*": [
        "packages/utils/src/*"
      ],
      "@types": [
        "packages/types/src/index.ts"
      ],
      "@types/*": [
        "packages/types/src/*"
      ],
      "plugin-registry": [
        "packages/plugin-registry/src/index.ts"
      ],
      "plugin-registry/*": [
        "packages/plugin-registry/src/*"
      ],
      "plugin-loader": [
        "packages/plugin-loader/src/index.ts"
      ],
      "plugin-loader/*": [
        "packages/plugin-loader/src/*"
      ]
    }
  },
  "include": [
    "apps",
    "packages"
  ]
}

