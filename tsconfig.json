{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2020"
    ],
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@mfes/k11-inbox": [
        "packages/k11-inbox/src/index.ts"
      ],
      "@mfes/k11-inbox/*": [
        "packages/k11-inbox/src/*"
      ],
      "@mfes/k11-monitoring": [
        "packages/k11-monitoring/src/index.ts"
      ],
      "@mfes/k11-monitoring/*": [
        "packages/k11-monitoring/src/*"
      ],
      "@design-system": [
        "packages/design-system/src/index.ts"
      ],
      "@design-system/*": [
        "packages/design-system/src/*"
      ],
      "@utils/*": [
        "packages/utils/src/*"
      ],
      "@mfes/types": [
        "packages/types/src/index.ts"
      ],
      "@types": [
        "packages/types/src/index.ts"
      ],
      "@types/*": [
        "packages/types/src/*"
      ]
    }
  },
  "include": [
    "apps",
    "packages"
  ]
}

